<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/setup_bg">

    <ImageView
        android:id="@+id/code"
        android:layout_width="213px"
        android:layout_height="213px"
        android:scaleType="centerCrop"
        android:layout_marginTop="106px"
        android:layout_centerHorizontal="true"
        android:background="@android:color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/code"
        android:includeFontPadding="false"
        android:layout_marginTop="20px"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/bind_tip_text_size"
        android:textColor="@color/major_text_color"
        android:fontFamily="zh-Hans"
        android:text="@string/guide_bind_tips" />

    <LinearLayout
        android:layout_width="120px"
        android:layout_height="120px"
        android:id="@+id/back_button">
        <ImageView
            android:src="@drawable/go_back_normal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_marginTop="24px"
            android:layout_marginLeft="24px"/>
    </LinearLayout>

</RelativeLayout>